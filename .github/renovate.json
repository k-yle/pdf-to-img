{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "labels": ["Dependencies"],
  "rangeStrategy": "bump",
  "dependencyDashboard": false,
  "timezone": "Pacific/Auckland",
  "schedule": ["every sunday"],
  "automerge": true,
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "groupName": "devDependencies"
    }
  ]
}
